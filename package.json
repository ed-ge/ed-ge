{
    "name": "ed-ge",
    "version": "1.0.0",
    "type": "module",
    "description": "The EDucational Game Engine, built with babel.",
    "scripts": {
        "jest": "node ./node_modules/jest/bin/jest.js",
        "test": "./node_modules/mocha/bin/mocha test/mocha/**/*.js",
        "cover": "npm run cover_main && npm run cover_start && npm run cover_end",
        "cover_main": "set CODECOV_TOKEN=\"3c73ea91-4a13-40dc-a259-3ec53b2ae5d1\" && nyc ./node_modules/mocha/bin/mocha test/mocha/**/*.js --report lcovonly -- -R spec && ./node_modules/codecov/bin/codecov",
        "cover_start": "",
        "cover_end": "curl -s https://codecov.io/bash | bash",
        "build": "babel src -d production",
        "start": "webpack --config ./webpack.main.config.js --mode=development && webpack --config ./webpack.base.config.js --mode=development && webpack --config ./webpack.components.config.js --mode=development",
        "rollup": "./node_modules/rollup/dist/bin/rollup src/engine/Base.js --file ./rollup/Base.js --format es --name 'Base'",
        "rollupWatch": "./node_modules/rollup/dist/bin/rollup src/engine/Base.js --file ./rollup/Base.js --format es --name 'Base' -w",
        "free": "rollup src/engine/Base.js --file ./free/Base.js --format iife --name 'Base'",
        "doc": "./node_modules/.bin/jsdoc -d ./docs -r ./src -c ./config/.jsdoc.json"
    },
    "keywords": [
        "GameEngine",
        "Games",
        "Education",
        "unomaha.edu"
    ],
    "author": "B. Ricks, and CSCI 2510 @ unomaha.edu",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-modules-umd": "^7.9.0",
        "@babel/preset-env": "^7.8.7",
        "@babel/register": "^7.8.6",
        "babel-loader": "^8.1.0",
        "babel-preset-es2015": "^6.24.1",
        "chai": "^4.2.0",
        "chai-string": "^1.5.0",
        "jest": "^25.5.3",
        "jsdoc": "^3.6.3",
        "mocha": "^7.1.0",
        "nyc": "^15.0.1",
        "rollup": "^2.7.6",
        "type-detect": "^4.0.8",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    },
    "dependencies": {
        "codecov": "^3.6.5"
    }
}
